---
interface Props {
  headline: string;
  subcopy: string;
  ctaLabel: string;
  ctaHref: string;
  stats: Array<{ label: string; value: string }>;
}

const { headline, subcopy, ctaLabel, ctaHref, stats } = Astro.props;
---

<section class="hero">
  <div class="hero-content">
    <div class="hero-text">
      <h1 class="headline">{headline}</h1>
      <p class="subcopy">{subcopy}</p>
      <a href={ctaHref} class="cta-button" data-cf-event="hero-cta-click" data-cf-label={ctaLabel}>
        {ctaLabel}
        <svg width="20" height="20" viewBox="0 0 20 20" fill="none" aria-hidden="true">
          <path d="M7 3l7 7-7 7" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </a>
    </div>
    <div class="hero-stats">
      {stats.map(stat => (
        <div class="stat">
          <div class="stat-value">{stat.value}</div>
          <div class="stat-label">{stat.label}</div>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .hero {
    width: 100%;
    background: 
      linear-gradient(135deg, rgba(26, 26, 26, 0.85) 0%, rgba(15, 15, 15, 0.9) 100%),
      url('/Hero.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    padding: var(--space-12) var(--space-4);
    margin-bottom: var(--space-8);
    position: relative;
    overflow: hidden;
  }
  
  /* Add subtle gradient animation and mesh effect */
  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: 
      radial-gradient(circle at 20% 50%, rgba(139, 92, 246, 0.15), transparent 50%),
      radial-gradient(circle at 80% 80%, rgba(167, 139, 250, 0.1), transparent 50%);
    pointer-events: none;
    animation: subtleMove 20s ease-in-out infinite;
  }
  
  @keyframes subtleMove {
    0%, 100% {
      transform: translate(0, 0);
    }
    50% {
      transform: translate(20px, 10px);
    }
  }
  
  .hero-content {
    max-width: var(--container-max);
    margin: 0 auto;
    display: grid;
    gap: var(--space-8);
    grid-template-columns: 1fr;
    position: relative;
    z-index: 1;
  }
  
  .hero-text {
    display: flex;
    flex-direction: column;
    gap: var(--space-4);
  }
  
  .headline {
    font-family: var(--font-heading);
    font-size: var(--text-5xl);
    font-weight: var(--font-bold);
    line-height: var(--leading-tight);
    color: var(--color-text-primary);
    margin: 0;
  }
  
  .subcopy {
    font-size: var(--text-lg);
    line-height: var(--leading-relaxed);
    color: var(--color-text-secondary);
    max-width: 600px;
    margin: 0;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    gap: var(--space-2);
    padding: var(--space-3) var(--space-6);
    background: var(--color-accent);
    color: white;
    text-decoration: none;
    border-radius: var(--radius-md);
    font-weight: var(--font-semibold);
    font-size: var(--text-base);
    transition: all var(--transition-base);
    align-self: flex-start;
    box-shadow: 0 4px 12px rgba(139, 92, 246, 0.3);
  }
  
  .cta-button:hover {
    background: rgba(139, 92, 246, 0.9);
    transform: translateY(-2px);
    box-shadow: 0 6px 16px rgba(139, 92, 246, 0.4);
  }
  
  .cta-button:active {
    transform: translateY(0);
  }
  
  .hero-stats {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--space-6);
    padding: var(--space-6);
    background: rgba(26, 26, 26, 0.5);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(139, 92, 246, 0.2);
    backdrop-filter: blur(10px);
  }
  
  .stat {
    text-align: center;
  }
  
  .stat-value {
    font-family: var(--font-heading);
    font-size: var(--text-4xl);
    font-weight: var(--font-bold);
    color: var(--color-accent);
    line-height: 1;
    margin-bottom: var(--space-2);
  }
  
  .stat-label {
    font-size: var(--text-sm);
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }
  
  /* Responsive adjustments */
  @media (min-width: 1024px) {
    .hero-content {
      grid-template-columns: 2fr 1fr;
      align-items: center;
    }
    
    .hero-stats {
      grid-template-columns: 1fr;
    }
  }
  
  @media (max-width: 640px) {
    .hero {
      padding: var(--space-8) var(--space-4);
    }
    
    .headline {
      font-size: var(--text-4xl);
    }
    
    .subcopy {
      font-size: var(--text-base);
    }
    
    .hero-stats {
      grid-template-columns: 1fr;
      gap: var(--space-4);
    }
    
    .stat-value {
      font-size: var(--text-3xl);
    }
  }
</style>
