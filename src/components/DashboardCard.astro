    display: flex;
    gap: var(--space-2);
    flex-wrap: wrap;
  }
  
  .category-chip {
    font-size: 0.75rem;
    padding: 2px 8px;
    background: rgba(139, 92, 246, 0.1);
    border-radius: var(--radius-sm);
    color: var(--color-accent);
  }
  
  .card-title {
    margin: 0;
  }
  
  .card-title a {
    color: var(--color-text-primary);
    text-decoration: none;
    font-size: 1.5rem;
    font-weight: 600;
    line-height: 1.3;
  }
  
  .card-title a:hover {
    color: var(--color-accent);
  }
  
  .card-excerpt {
    color: var(--color-text-secondary);
    line-height: 1.6;
  }
  
