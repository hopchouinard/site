---
interface Props {
  date: string;
  title: string;
  summary: string;
  tags: string[];
  categories: string[];
  url: string;
}

const { date, title, summary, tags, categories, url } = Astro.props;

// Format date nicely
const formatDate = (dateStr: string) => {
  const d = new Date(dateStr);
  return d.toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' });
};

// Truncate summary to first 50 words
const truncateSummary = (text: string, wordLimit: number = 50): string => {
  const words = text.split(/\s+/);
  if (words.length <= wordLimit) return text;
  return words.slice(0, wordLimit).join(' ') + '...';
};
---

<article 
  class="dashboard-card" 
  data-dashboard-id={date}
  data-date={date}
  data-tags={JSON.stringify(tags)}
  data-categories={JSON.stringify(categories)}
>
  <div class="card-header">
    <time datetime={date}>{formatDate(date)}</time>
    {categories.length > 0 && (
      <div class="categories">
        {categories.map(cat => (
          <span class="category-chip">{cat}</span>
        ))}
      </div>
    )}
  </div>
  
  <h3 class="card-title">
    <a href={url}>{title}</a>
  </h3>
  
  <p class="card-excerpt">{truncateSummary(summary)}</p>
  
  {tags.length > 0 && (
    <div class="card-tags">
      {tags.slice(0, 5).map(tag => (
        <span class="tag">{tag}</span>
      ))}
      {tags.length > 5 && (
        <span class="tag-overflow">+{tags.length - 5} more</span>
      )}
    </div>
  )}
  
  <a href={url} class="view-report-btn">
    View report
    <svg width="16" height="16" viewBox="0 0 16 16" fill="none">
      <path d="M6 12l4-4-4-4" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
    </svg>
  </a>
</article>

