---
/**
 * Source file detail page - Displays individual raw artifacts
 * Route: /daily/[date]/source/[...path]
 */
import { readFile, readdir } from 'fs/promises';
import { join } from 'path';
import { fileURLToPath } from 'url';
import ArtifactHeader from '../../../../components/source/ArtifactHeader.astro';
import RawViewer from '../../../../components/source/RawViewer.astro';
import FileTree from '../../../../components/source/FileTree.astro';

// Generate static paths for all source artifacts
export async function getStaticPaths() {
  const manifestsDir = join(process.cwd(), 'src/data/source-manifests');

  let files;
  try {
    files = await readdir(manifestsDir);
  } catch (err) {
    console.warn('No source manifests found, skipping source artifact pages');
    return [];
  }

  const manifestFiles = files.filter(f => f.endsWith('.json'));
  const paths = [];

  for (const file of manifestFiles) {
    const manifestPath = join(manifestsDir, file);
    const manifestContent = await readFile(manifestPath, 'utf-8');
    const manifest = JSON.parse(manifestContent);

    // Generate a path for each artifact
    for (const artifact of manifest.artifacts || []) {
      paths.push({
        params: {
          date: manifest.date,
          path: artifact.relativePath
        }
      });
    }
  }

  return paths;
}

const { date, path: artifactPath } = Astro.params;

if (!date || !artifactPath) {
  return Astro.redirect('/404');
}

// Decode the artifact path
const decodedPath = decodeURIComponent(artifactPath);

// Load source manifest for this date
const __dirname = fileURLToPath(new URL('.', import.meta.url));
const manifestPath = join(process.cwd(), 'src/data/source-manifests', `${date}.json`);

let manifest;
try {
  const manifestContent = await readFile(manifestPath, 'utf-8');
  manifest = JSON.parse(manifestContent);
} catch (err) {
  console.error(`Failed to load manifest for ${date}:`, err);
  return Astro.redirect('/404');
}

// Find the artifact in the manifest
const artifact = manifest.artifacts.find((a: any) => a.relativePath === decodedPath);

if (!artifact) {
  console.error(`Artifact not found: ${decodedPath}`);
  return Astro.redirect('/404');
}

// Load the actual file content from static directory
const staticFilePath = join(process.cwd(), 'static/source', date, decodedPath);

let fileContent = '';
try {
  fileContent = await readFile(staticFilePath, 'utf-8');
} catch (err) {
  console.error(`Failed to load file content: ${staticFilePath}`, err);
  // Try to use preview from manifest as fallback
  fileContent = artifact.preview || 'File content could not be loaded.';
}

const title = `${decodedPath.split('/').pop()} - ${date} - NeuroHelix`;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title}</title>
  <meta name="description" content={`Source artifact: ${artifact.artifactType}`} />
  <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
</head>
<body class="source-view">
  <div class="source-layout">
    <!-- Hero Toolbar -->
    <header class="source-header">
      <div class="source-header__content">
        <div class="source-header__brand">
          <a href="/" class="brand-link">
            <span class="brand-icon">ðŸ§¬</span>
            <span class="brand-name">NeuroHelix</span>
          </a>
          <span class="source-header__divider">/</span>
          <a href={`/daily/${date}`} class="source-header__date">{date}</a>
        </div>

        <div class="source-header__actions">
          <a href={`/dashboards/${date}`} class="back-to-report-button">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M19 12H5M12 19l-7-7 7-7"/>
            </svg>
            <span>Back to Report</span>
          </a>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <div class="source-content">
      <!-- Sidebar with FileTree -->
      <aside class="source-sidebar" id="source-sidebar">
        <FileTree
          artifacts={manifest.artifacts}
          date={date}
          selectedPath={decodedPath}
        />
      </aside>

      <!-- Main pane -->
      <main class="source-main">
        <ArtifactHeader
          date={date}
          relativePath={decodedPath}
          artifactType={artifact.artifactType}
          displayGroup={artifact.displayGroup}
          sizeBytes={artifact.sizeBytes}
          checksum={artifact.checksum}
          mime={artifact.mime}
          createdAt={artifact.createdAt}
        />

        <RawViewer
          content={fileContent}
          mime={artifact.mime}
          fileName={decodedPath.split('/').pop() || decodedPath}
          sizeBytes={artifact.sizeBytes}
        />
      </main>
    </div>
  </div>

  <style>
    :root {
      --color-sidebar: #1a1a1a;
      --color-surface: #1a1a1a;
      --color-hover-violet: #8b5cf6;
      --font-mono: 'Fira Code', ui-monospace, monospace;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    html, body {
      height: 100%;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
    }

    body.source-view {
      background: #0a0a0a;
      color: #fff;
      overflow: hidden;
    }

    .source-layout {
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .source-header {
      flex-shrink: 0;
      background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%);
      border-bottom: 1px solid rgba(139, 92, 246, 0.2);
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3);
    }

    .source-header__content {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 1rem 1.5rem;
      max-width: 100%;
    }

    .source-header__brand {
      display: flex;
      align-items: center;
      gap: 0.75rem;
    }

    .brand-link {
      display: flex;
      align-items: center;
      gap: 0.5rem;
      text-decoration: none;
      color: #fff;
      font-weight: 600;
      font-size: 1.125rem;
      transition: color 0.2s ease;
    }

    .brand-link:hover {
      color: #8b5cf6;
    }

    .brand-icon {
      font-size: 1.5rem;
    }

    .source-header__divider {
      color: rgba(255, 255, 255, 0.3);
      font-weight: 300;
    }

    .source-header__date {
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      font-family: ui-monospace, monospace;
      font-size: 0.875rem;
      padding: 0.25rem 0.625rem;
      background: rgba(255, 255, 255, 0.05);
      border-radius: 0.375rem;
      transition: all 0.2s ease;
    }

    .source-header__date:hover {
      background: rgba(139, 92, 246, 0.2);
      color: #fff;
    }

    .source-header__actions {
      display: flex;
      align-items: center;
      gap: 1rem;
    }

    .back-to-report-button {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(139, 92, 246, 0.1);
      border: 1px solid rgba(139, 92, 246, 0.3);
      border-radius: 0.5rem;
      color: #c4b5fd;
      font-size: 0.875rem;
      font-weight: 500;
      text-decoration: none;
      transition: all 0.2s ease;
    }

    .back-to-report-button:hover {
      background: rgba(139, 92, 246, 0.2);
      border-color: #8b5cf6;
      color: #fff;
    }

    .back-to-report-button svg {
      width: 1rem;
      height: 1rem;
    }

    .action-link {
      display: inline-flex;
      align-items: center;
      gap: 0.5rem;
      padding: 0.5rem 1rem;
      background: rgba(255, 255, 255, 0.05);
      border: 1px solid rgba(255, 255, 255, 0.1);
      border-radius: 0.5rem;
      color: #fff;
      text-decoration: none;
      font-size: 0.875rem;
      font-weight: 500;
      transition: all 0.2s ease;
    }

    .action-link:hover {
      background: rgba(139, 92, 246, 0.2);
      border-color: #8b5cf6;
    }

    .source-content {
      display: flex;
      flex: 1;
      overflow: hidden;
    }

    .source-sidebar {
      width: 300px;
      flex-shrink: 0;
      overflow: hidden;
      border-right: 1px solid rgba(255, 255, 255, 0.1);
    }

    .source-main {
      flex: 1;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .source-main > :global(*:last-child) {
      flex: 1;
      overflow: auto;
    }

    @media (max-width: 1024px) {
      .source-sidebar {
        position: absolute;
        left: -300px;
        top: 0;
        height: 100%;
        z-index: 100;
        transition: left 0.3s ease;
      }

      .source-sidebar--open {
        left: 0;
      }
    }

    @media (max-width: 768px) {
      .source-header__content {
        flex-direction: column;
        align-items: flex-start;
        gap: 1rem;
      }

      .source-sidebar {
        width: 250px;
        left: -250px;
      }
    }
  </style>

  <script>
    // Sidebar toggle for mobile
    document.addEventListener('DOMContentLoaded', () => {
      // Could add a mobile menu button here if needed
    });
  </script>
</body>
</html>
